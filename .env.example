# Discord Configuration
DISCORD_TOKEN=
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_GUILD_ID=
DISCORD_CALLBACK_URL=http://localhost:3000/auth/discord/callback

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=koth
DB_USER=
DB_PASSWORD=

# Database Pool Settings (optional)
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# HTTP Server Configuration
HTTP_PORT=3000
CORS_ORIGINS=http://localhost:5173
SESSION_SECRET=your-session-secret-change-in-production
SESSION_MAX_AGE=86400000

# Game Server WebSocket Connections (v2)
# KOTH Bot connects TO game servers running WsKothDB plugin.
# Each server must be registered in the database to get an API token.
# Format: url|token,url|token,...
# Example: ws://gameserver1:3001|abc123token,ws://gameserver2:3001|def456token
GAME_SERVERS=

# Reconnection settings (optional)
GAME_SERVER_RECONNECT_ATTEMPTS=-1
GAME_SERVER_RECONNECT_DELAY=1000
GAME_SERVER_RECONNECT_DELAY_MAX=30000
GAME_SERVER_TIMEOUT=10000

# Sync Configuration (v2)
# Active server timeout - how long before a player's active session expires (ms)
ACTIVE_SERVER_TIMEOUT=30000
# Server-hop retry delay - delay between retries when player is active elsewhere (ms)
SERVER_HOP_RETRY_DELAY=2000
# Server-hop max retries
SERVER_HOP_MAX_RETRIES=5

# Audit Log Configuration
# Days to keep non-flagged audit logs before cleanup
AUDIT_LOG_RETENTION_DAYS=30

# Dashboard URL (for redirects after auth)
DASHBOARD_URL=http://localhost:5173

# Environment
NODE_ENV=development
LOG_LEVEL=debug

# Discord Channel IDs (optional)
CHANNEL_BOT_LOGS=
CHANNEL_MOD_LOGS=
CHANNEL_ERROR_LOGS=
CHANNEL_MEMBER_LOGS=
CHANNEL_ANNOUNCEMENTS=
CHANNEL_WELCOME=
CHANNEL_STATUS=
CHANNEL_KOTH=
CHANNEL_EVENT_ANNOUNCEMENTS=

# Discord Role IDs (optional)
ROLE_ADMIN_ID=
ROLE_MODERATOR_ID=
ROLE_STAFF_ID=
ROLE_MEMBER_ID=

# Application Info
APP_NAME=KOTH Bot
APP_VERSION=1.0.0
